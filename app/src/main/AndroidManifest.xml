<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.ruslan.noteapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.ruslan.noteapp.NoteListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.ruslan.noteapp.NotePagerActivity"
                  android:label="@string/app_name"
                  android:parentActivityName="com.example.ruslan.noteapp.NoteListActivity">
        </activity>
    </application>

</manifest>
